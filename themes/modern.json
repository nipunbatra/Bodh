{
  "name": "Modern",
  "description": "Slides.com inspired clean design with Inter font",
  "colors": {
    "background": "#ffffff",
    "text": "#2d3748",
    "heading": "#1a202c",
    "accent": "#1baee1",
    "secondary": "#718096",
    "code_bg": "#f8fafc",
    "quote_bg": "#f7fafc",
    "border": "#e2e8f0"
  },
  "typography": {
    "body_weight": "400",
    "heading_weight": "500",
    "line_height": "1.6"
  },
  "spacing": {
    "slide_padding": "3rem",
    "element_margin": "2rem"
  },
  "effects": {
    "shadows": false,
    "rounded_corners": false,
    "gradients": false
  },
  "special_features": {
    "title_hrule": false,
    "section_hrule": false,
    "minimal_navigation": false,
    "clean_bullets": false,
    "monospace_emphasis": false
  }
}